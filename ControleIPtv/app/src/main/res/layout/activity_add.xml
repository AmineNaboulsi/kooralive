<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/match_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_calendar_today_24"
        android:ems="10"
        android:gravity="center"
        android:hint="Math Date"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/TeamA_flag"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="30dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/add_shape"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_date" />

    <ImageView
        android:id="@+id/TeamB_flag"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="30dp"
        android:background="@drawable/add_shape"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_date" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/vs"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/TeamB_flag"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/TeamA_flag"
        app:layout_constraintTop_toBottomOf="@+id/match_date" />

    <TextView
        android:id="@+id/TeamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/TeamA_flag"
        app:layout_constraintStart_toStartOf="@+id/TeamA_flag"
        app:layout_constraintTop_toBottomOf="@+id/TeamA_flag" />

    <TextView
        android:id="@+id/TeamB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TeamB_flag"
        app:layout_constraintStart_toStartOf="@+id/TeamB_flag"
        app:layout_constraintTop_toBottomOf="@+id/TeamB_flag" />




    <TextView
        android:id="@+id/match_time_start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_access_time_24"
        android:ems="10"
        android:gravity="center"
        android:hint="Math start"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TeamA" />

    <TextView
        android:id="@+id/match_time_end"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_access_time_24"
        android:ems="10"
        android:gravity="center"
        android:hint="Math End"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/TeamB" />


    <EditText
        android:id="@+id/txt_commantaire"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_terrain_24"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="mo3ali9"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/txt_channel"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_wifi_channel_24"
        android:drawablePadding="15dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Channel"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_commantaire" />
    <EditText
        android:id="@+id/txt_dawri"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_web_asset_24"
        android:drawablePadding="15dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Dawri"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_channel" />

    <EditText
        android:id="@+id/txt_url"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_link_24"
        android:drawablePadding="15dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="https://live1.yalla-shoott.xyz/albaplayer/sport-3/"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dawri" />

    <EditText
        android:id="@+id/txt_desc"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plaintext_shape"
        android:drawableLeft="@drawable/baseline_access_time_24"
        android:ems="10"
        android:hint="Desc"
        android:drawablePadding="15dp"

        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_url" />


    <TextView
        android:id="@+id/cencel"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/plaintext_shape_red"
        android:drawableLeft="@drawable/baseline_block_24"
        android:ems="10"
        android:gravity="center"
        android:hint="Cancel"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="Cancel"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc" />

    <TextView
        android:id="@+id/save"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/plaintext_shape_green"
        android:drawableLeft="@drawable/baseline_add_task_24"
        android:ems="10"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Math End"
        android:inputType="textPersonName"
        android:text="Save"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>